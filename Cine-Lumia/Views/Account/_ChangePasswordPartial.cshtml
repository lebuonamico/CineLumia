@model Cine_Lumia.Models.ChangePasswordViewModel

<form asp-action="ChangePassword" method="post" data-ajax="true" data-ajax-method="POST" data-ajax-update="#genericModal .modal-body" data-ajax-mode="replace" data-ajax-success="onChangePasswordSuccess">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-floating mb-3">
        <input asp-for="OldPassword" class="form-control" />
        <label asp-for="OldPassword"></label>
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="NewPassword" class="form-control" />
        <label asp-for="NewPassword"></label>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="ConfirmPassword" class="form-control" />
        <label asp-for="ConfirmPassword"></label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
    </div>
</form>

<script>
    function onChangePasswordSuccess(data) {
        if (data && data.success) { // Assuming your controller returns { success: true } on successful password change
            alert('Contraseña cambiada exitosamente.');
            // Close the modal and potentially redirect or refresh
            location.reload(); 
        } else {
            // If change failed but ModelState was valid, the partial view itself will show errors
            // Re-parse validation scripts for the newly loaded content
            $.validator.unobtrusive.parse('#genericModal .modal-body');
        }
    }
</script>