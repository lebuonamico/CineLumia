@model Cine_Lumia.Controllers.AccountController.DeleteAccountPasswordModel

<form asp-action="DeleteAccountConfirmed" method="post" data-ajax="true" data-ajax-method="POST" data-ajax-update="#genericModal .modal-body" data-ajax-mode="replace" data-ajax-success="onDeleteAccountSuccess">
    <div class="modal-body">
        <p class="text-danger text-center">¡Advertencia! Esta acción es irreversible. Al eliminar tu cuenta, se borrarán todos tus datos.</p>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="Password" class="form-label">Contraseña</label>
            <input type="password" id="Password" name="Password" class="form-control" required />
            <span data-valmsg-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
    </div>
</form>

<script>
    function onDeleteAccountSuccess(data) {
        if (data && data.success) { // Assuming your controller returns { success: true } on successful deletion
            alert('Tu cuenta ha sido eliminada exitosamente.');
            // Close the modal and redirect to home
            window.location.href = data.redirectUrl; 
        } else {
            // If deletion failed but ModelState was valid, the partial view itself will show errors
            // Re-parse validation scripts for the newly loaded content
            $.validator.unobtrusive.parse('#genericModal .modal-body');
        }
    }
</script>