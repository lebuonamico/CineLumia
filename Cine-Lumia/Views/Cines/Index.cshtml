@{
    ViewData["Title"] = "Elegí tu Cine";
}

<!-- Botón para abrir el panel lateral (usa el offcanvas definido en _Layout) -->
<div class="text-center mt-5">
    <button class="btn btn-outline-light bg-dark px-4 py-2"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasCines"
            aria-controls="offcanvasCines">
        🎬 Elegí Cine
    </button>
</div>

@section Scripts {
    <script>
        // Al entrar en esta página, sincronizar el texto del nav con localStorage (si existe)
        document.addEventListener('DOMContentLoaded', function () {
            try {                var sel = localStorage.getItem('cineSeleccionado');                if (!sel) return;                if (typeof setFooter === 'function') {                    setFooter(sel);                } else {                    var nav = document.getElementById('navCineNombre');                    if (nav) nav.textContent = 'Cargando...';                }            } catch (e) { }        });    </script>}
