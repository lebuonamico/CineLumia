@model IEnumerable<Cine_Lumia.Entities.CineConsumible>

@{
    ViewData["Title"] = "Snacks disponibles por cine";

    var categorias = new Dictionary<string, string>
    {
        { "BE_", "Bebidas" },
        { "CAF_", "Cafeteria" },
        { "CO_", "Combos" },
        { "COL_", "Coleccionables" },
        { "GO_", "Golosinas" },
        { "PO_", "Pochoclos" },
        { "SNA_", "Snacks" }
    };

    var customOrder = new List<string> { "Coleccionables", "Combos", "Pochoclos", "Bebidas", "Snacks", "Golosinas", "Cafeteria" };

    var consumiblesPorCategoria = Model
        .Where(c => c != null && c.Consumible != null)
        .Select(c => new {
            Item = c,
            Categoria = categorias.FirstOrDefault(cat => !string.IsNullOrEmpty(c.Consumible.PosterUrl) && c.Consumible.PosterUrl.Contains(cat.Key, StringComparison.OrdinalIgnoreCase)).Value ?? "General"
        })
        .GroupBy(x => x.Categoria)
        .OrderBy(g => {
            var index = customOrder.IndexOf(g.Key);
            return index == -1 ? int.MaxValue : index;
        });
}
@{
    string modo = ViewBag.Modo ?? "Normal";
}

