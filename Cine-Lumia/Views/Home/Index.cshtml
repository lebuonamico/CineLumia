@model Cine_Lumia.Models.HomeViewModel

@{
    ViewData["Title"] = "Inicio - Cine Lumia";
}

<div class="container">
    <!-- HERO / SLIDER -->
    <div id="carouselDestacadas" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.Destacadas.Count; i++)
            {
                <button type="button" data-bs-target="#carouselDestacadas" data-bs-slide-to="@i"
                        class="@(i == 0 ? "active" : "")"
                        aria-current="@(i == 0 ? "true" : "false")"
                        aria-label="Slide @(i + 1)"></button>
            }
        </div>
        <div class="carousel-inner rounded shadow-sm">
            @for (int i = 0; i < Model.Destacadas.Count; i++)
            {
                var pelicula = Model.Destacadas[i];
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-5">
                            <img src="@Url.Content(string.Format("~/images/movies/{0}.jpg", pelicula.Id_Pelicula))"
                                 onerror="this.onerror=null;this.src='@Url.Content("~/images/placeholder-movie.png")';"
                                 class="d-block w-100" alt="@pelicula.Nombre"
                                 style="max-height:420px; object-fit:cover;"/>
                        </div>
                        <div class="col-md-7">
                            <div class="carousel-caption text-start text-dark p-4">
                                <h2>@pelicula.Nombre</h2>
                                <p class="lead">@string.Join(", ", pelicula.PeliculaGeneros.Select(pg => pg.Genero.GeneroNombre))
                                </p>
                                <p><strong>Duración:</strong> @pelicula.Duracion min •
                                    <strong>Estreno:</strong> @pelicula.Fecha_Estreno.ToShortDateString()
                                </p>
                                <a class="btn btn-primary" asp-controller="Peliculas" asp-action="Detalle"
                                   asp-route-id="@pelicula.Id_Pelicula">Ver más</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselDestacadas" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselDestacadas" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>

    <!-- CARTELERA -->
    <section class="mt-5">
        <h3 class="mb-4">Cartelera</h3>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var pelicula in Model.Cartelera)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Content(string.Format("~/images/movies/{0}.jpg", pelicula.Id_Pelicula))"
                             onerror="this.onerror=null;this.src='@Url.Content("~/images/placeholder-movie.png")';"
                             class="card-img-top" alt="@pelicula.Nombre"
                             style="height:300px; object-fit:cover;"/>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@pelicula.Nombre</h5>
                            <p class="card-text text-muted">@string.Join(", ", pelicula.PeliculaGeneros.Select(pg => pg.Genero.GeneroNombre))
                            </p>
                            <p class="text-muted small">@pelicula.Fecha_Estreno.ToShortDateString() • @pelicula.Duracion
                                min</p>
                            <div class="mt-auto">
                                <a class="btn btn-outline-primary w-100" asp-controller="Peliculas" asp-action="Detalle"
                                   asp-route-id="@pelicula.Id_Pelicula">Ver más</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

@section Scripts {
    <script>
        var myCarousel = document.querySelector('#carouselDestacadas');
        if (myCarousel) {
            var carousel = new bootstrap.Carousel(myCarousel, {
                interval: 5000
            });
        }
    </script>
}
