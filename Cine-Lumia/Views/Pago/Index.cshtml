        {
            <div class="snacks-resumen">
                <strong class="snacks-titulo" style="color:#e5e5e5;">Snacks:</strong>
                <div class="snacks-list">
                    @foreach (var snack in (List<CarritoItemViewModel>)ViewBag.Snacks)
                    {
                        <div class="snack-item" style="color:#aaa;">
                            <img src="@snack.ImagenUrl" alt="@snack.Snack" class="snack-img" />
                            <div class="snack-info">
                                <span class="snack-nombre" style="color:#e5e5e5;">@snack.Snack</span>
                                <span class="snack-cantidad" style="color:#aaa;">Cantidad: @snack.Cantidad</span>
                                <span class="snack-precio" style="color:#fff;">
                                    $@( (snack.Precio * snack.Cantidad).ToString("N0", new System.Globalization.CultureInfo("es-AR")) )
                                </span>
                            </div>
                        </div>
                    }

                </div>

                <div style="display:flex; justify-content:space-between; align-items:center; background:#1b1b1b; padding:8px 12px; border-radius:8px; margin-top:8px;">
                    <div style="font-weight:700; color:#ff253c;">Cargo por servicio Candy</div>
                    <div style="font-weight:700; color:#fff;">$@((ViewBag.CargoSnacks ?? 0).ToString("N0"))</div>
                </div>
            </div>
        }

        <div style="display:flex; justify-content:space-between; align-items:center; background:#1b1b1b; padding:8px 12px; border-radius:8px; margin-top:8px;">
            <div style="font-weight:700; color:#ff253c;">Cargo por servicio entradas</div>
            <div style="font-weight:700; color:#fff;">$@((ViewBag.CargoEntradas ?? 0).ToString("N0"))</div>
        </div>

        <hr class="resumen-hr" />

        <div class="total-box">
            Total: $@Model.TotalCompra.ToString("N0", new CultureInfo("es-AR"))
        </div>

    </div>


</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
    <script>
        function justDigits(str) {
            return (str || '').replace(/\D/g, '');
        }

        const numeroInput = document.getElementById('NumeroTarjeta');
        numeroInput?.addEventListener('input', function () {
            const digits = justDigits(this.value).slice(0, 19);
            let formatted = digits.match(/.{1,4}/g);
            this.value = formatted ? formatted.join(' ') : '';
        });

        const vencInput = document.getElementById('Vencimiento');
        vencInput?.addEventListener('input', function () {
            let v = justDigits(this.value).slice(0, 4);
            this.value = v.length >= 3 ? v.slice(0,2)+'/'+v.slice(2) : v;
        });

        const cvvInput = document.getElementById('CVV');
        cvvInput?.addEventListener('input', function () {
            this.value = justDigits(this.value).slice(0,4);
        });

        document.getElementById('btnEnviar')?.addEventListener('click', function (e) {
            if (!document.getElementById('acepto').checked) {
                e.preventDefault();
                alert('Debés aceptar los Términos y Condiciones.');
                return false;
            }

            if (justDigits(numeroInput.value).length < 13) {
                e.preventDefault();
                alert('Ingresá un número de tarjeta válido.');
                return false;
            }

            const venc = vencInput.value;
            if (!/^\d{2}\/\d{2}$/.test(venc)) {
                e.preventDefault();
                alert('Ingresá vencimiento en formato MM/YY.');
                return false;
            }

            const mes = parseInt(venc.split('/')[0], 10);
            if (mes < 1 || mes > 12) {
                e.preventDefault();
                alert('Mes de vencimiento inválido.');
                return false;
            }

            if (justDigits(cvvInput.value).length < 3) {
                e.preventDefault();
                alert('Ingresá un CVV válido.');
                return false;
            }
        });
    </script>
    <script>
        // reconstruye el carrito usando los snacks que ya recibiste del controller
        let carrito = [];
        console.log("RECONSTRUYENDO CARRITO EN PAGO...");
        @if (ViewBag.Snacks != null)
        {
                foreach (var s in (List<CarritoItemViewModel>)ViewBag.Snacks)
                {
                        <text>
                            carrito.push({
                                id: @s.Id,
                                snack: "@s.Snack",
                                cantidad: @s.Cantidad,
                                        precio: Number(@s.Precio)

                            });
                        </text>
                }
        }
    </script>
    <script>
        function copiarDatosPago() {
            document.getElementById("hiddenTitular").value = document.getElementById("Titular").value;
            document.getElementById("hiddenDNI").value = document.getElementById("DNI").value;
            document.getElementById("hiddenNumeroTarjeta").value = document.getElementById("NumeroTarjeta").value;
            document.getElementById("hiddenVencimiento").value = document.getElementById("Vencimiento").value;
            document.getElementById("hiddenCVV").value = document.getElementById("CVV").value;
        }
    </script>

    <script>

        function volverAConsumibles() {
            fetch('/Consumibles/GuardarCarrito', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(carrito) // carrito DEBE venir de Session
            })
            .then(r => {
                if (r.ok) {
                    window.location.href = '/Pago/VolverConsumibles';
                } else {
                    alert("Error guardando carrito en sesión");
                }
            });
        }
    </script>
