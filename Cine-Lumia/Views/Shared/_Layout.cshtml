                var sel = localStorage.getItem('cineSeleccionado');
                if (!sel) { nav.textContent = 'Seleccionar Cine'; return; }

                // Try to use cache if already available
                if (window.cinesCache && Array.isArray(window.cinesCache)) {
                    var f = window.cinesCache.find(function(c){ return c.id == sel; });
                    if (f) { nav.textContent = f.nombre; return; }
                }

                // Fallback: request list and update nav
                fetch('/Cines/Listar')
                    .then(function(r){ return r.json(); })
                    .then(function(list){ if (!list) { nav.textContent = 'Seleccionar Cine'; return; } window.cinesCache = list; var found = list.find(function(c){ return c.id == sel; }); if (found) nav.textContent = found.nombre; else nav.textContent = 'Seleccionar Cine'; })
