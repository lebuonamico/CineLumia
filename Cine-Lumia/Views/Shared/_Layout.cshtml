@{
    var returnUrl = Context.Request.Path + Context.Request.QueryString;

    string controller = Context.Request.RouteValues["controller"]?.ToString() ?? "";
    string action = Context.Request.RouteValues["action"]?.ToString() ?? "";

    bool ocultarSelectorCine =
        controller == "Funciones" ||
        controller == "VentaEntradas" ||
        controller == "Asientos" || 
        (controller == "Consumibles" && action == "EntradaSnaks") ||
        controller == "Pago";

    // Obtener nombre de cine desde Session/DB para renderizado inicial en el navbar
    string selectedCineName = "Seleccionar Cine";
    try
    {
        var selectedId = Context.Session.GetInt32("CineSeleccionado");
        if (selectedId.HasValue)
        {
            var db = Context.RequestServices.GetService(typeof(Cine_Lumia.Models.CineDbContext)) as Cine_Lumia.Models.CineDbContext;
            if (db != null)
            {
                var cine = db.Cines.FirstOrDefault(c => c.Id_Cine == selectedId.Value);
                if (cine != null)
                {
                    selectedCineName = cine.Nombre;
                }
            }
        }
    }
    catch
    {
        // no bloquear render si falla
    }
}

