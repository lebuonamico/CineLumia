    <div id="snow"></div>

    <script>
        let snowflakes_count = 50;

        const spawnSnow = (density = 100) => {
            const snowContainer = document.getElementById('snow');
            snowContainer.innerHTML = '';

            for (let i = 0; i < density; i++) {
                const snowflake = document.createElement('div');
                snowflake.className = "snowflake";

                // Configuración individual para cada copo
                const randomX = Math.random() * 100;
                const randomOffset = (Math.random() * 20 - 10);
                const randomXEnd = randomX + randomOffset;
                const randomScale = Math.random() * 0.8 + 0.2;
                const fallDuration = Math.random() * 20 + 10;
                const fallDelay = Math.random() * 30 * -1;
                const opacity = Math.random();

                snowflake.style.opacity = opacity;
                snowflake.style.transform = `translate(${randomX}vw, -10px) scale(${randomScale})`;
                snowflake.style.animationDuration = `${fallDuration}s`;
                snowflake.style.animationDelay = `${fallDelay}s`;

                // Animación with requestAnimationFrame para evitar keyframes

                animateSnowflake(snowflake, randomX, randomXEnd, randomScale, fallDuration);

                snowContainer.appendChild(snowflake);
            }
        };

        function animateSnowflake(snowflake, startX, endX, scale, duration) {
            let startTime = null;

            function animate(currentTime) {
                if (!startTime) startTime = currentTime;
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / (duration * 1000), 1);

                // Movimiento parabólico
                const currentX = startX + (endX - startX) * progress;
                const currentY = progress * 100;

                snowflake.style.transform = `translate(${currentX}vw, ${currentY}vh) scale(${scale})`;

                if (progress < 1) {
                    requestAnimationFrame(animate);
                } else {
                    // Reiniciar animación
                    snowflake.style.transform = `translate(${startX}vw, -10px) scale(${scale})`;
                    startTime = null;
                    requestAnimationFrame(animate);
                }
            }

            requestAnimationFrame(animate);
        }

        document.addEventListener('DOMContentLoaded', () => {
            spawnSnow(snowflakes_count);
        });
    </script>

    <script>
        // Fallback robusto: asegura que el nombre del cine en el navbar se inicialice siempre al cargar.
        (function () {
            try {
                document.addEventListener('DOMContentLoaded', function () {
                    try {
                        var navEl = document.getElementById('navCineNombre');
                        if (!navEl) return;
                        var seleccionado = localStorage.getItem('cineSeleccionado');
                        if (!seleccionado) {
                            navEl.textContent = 'Seleccionar Cine';
                            return;
                        }

                        // Intentar obtener nombre desde la cache global si existe
                        if (window.cinesCache && Array.isArray(window.cinesCache)) {
                            var found = window.cinesCache.find(c => c.id == seleccionado);
                            if (found) { navEl.textContent = found.nombre; return; }
                        }

                        // Si no está en cache, pedir al servidor por la lista y actualizar nav
                        fetch('/Cines/Listar').then(function (r) { return r.json(); }).then(function (list) {
                            if (!list) { navEl.textContent = 'Seleccionar Cine'; return; }
                            try { window.cinesCache = list; } catch (e) { }
                            var f = list.find(function (c) { return c.id == seleccionado; });
                            if (f) navEl.textContent = f.nombre; else navEl.textContent = 'Seleccionar Cine';
                        }).catch(function () { navEl.textContent = 'Seleccionar Cine'; });
                    } catch (e) { /* noop */ }
                });
