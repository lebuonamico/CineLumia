<!-- Script para cargar dinámicamente los cines -->
<script>
    // Cache de cines para reusar y actualizar footer
    var cinesCache = [];

    document.addEventListener('DOMContentLoaded', async () => {
        const contenedor = document.getElementById('listaCines');

        try {
            const response = await fetch('/Cines/Listar');
            const cines = await response.json();
            cinesCache = cines;

            contenedor.innerHTML = cines.map(c => `
                <div class="list-group-item bg-dark text-light d-flex justify-content-between align-items-start border-0 py-3">
                    <div>
                        <div class="fw-semibold"><i class="bi bi-buildings-fill"></i> ${c.nombre}</div>
                        <small class="text-secondary">${c.direccion}</small>
                        
                    </div>
                    <input type="radio" name="cine" value="${c.id}" class="form-check-input bg-secondary border-0">
                </div>
            `).join('');

            // Si ya hay cine seleccionado en localStorage, marcarlo
            const elegidoLocal = localStorage.getItem('cineSeleccionado');
            if (elegidoLocal) {
                const input = document.querySelector(`input[name="cine"][value="${elegidoLocal}"]`);
                if (input) input.checked = true;
                setFooter(elegidoLocal);
            } else {
                setFooter(null);
            }

        } catch (error) {
            contenedor.innerHTML = '<p class="text-danger">Error al cargar los cines.</p>';
            setFooter(null);
        }
    });

    // Asegurar que setFooter actualice también el texto del nav
    function setFooter(cineId) {
        var nombreEl = document.getElementById('footerCineNombre');
        var direccionEl = document.getElementById('footerCineDireccion');
        var navNombreEl = document.getElementById('navCineNombre');
        if (!nombreEl || !direccionEl) return;

        if (!cineId) {
            nombreEl.textContent = 'Cine no seleccionado';
            direccionEl.textContent = '';
            if (navNombreEl) navNombreEl.textContent = 'Seleccionar Cine';
            return;
        }

        var cine = cinesCache.find(c => c.id == cineId);
        if (cine) {
            nombreEl.textContent = cine.nombre;
            direccionEl.textContent = cine.direccion;
            if (navNombreEl) navNombreEl.textContent = cine.nombre;
        } else {
            // Si no está en cache, intentar pedir al servidor
            fetch(`/Cines/Listar`).then(r => r.json()).then(list => {
                cinesCache = list;
                var found = cinesCache.find(c => c.id == cineId);
                if (found) {
                    nombreEl.textContent = found.nombre;
                    direccionEl.textContent = found.direccion;
                    if (navNombreEl) navNombreEl.textContent = found.nombre;
                } else {
                    nombreEl.textContent = 'Cine no seleccionado';
                    direccionEl.textContent = '';
                    if (navNombreEl) navNombreEl.textContent = 'Seleccionar Cine';
                }
            }).catch(() => {
                nombreEl.textContent = 'Cine no seleccionado';
                direccionEl.textContent = '';
                if (navNombreEl) navNombreEl.textContent = 'Seleccionar Cine';
            });
        }
    }

    document.getElementById('btnSeleccionar').addEventListener('click', async () => {
        const elegido = document.querySelector('input[name="cine"]:checked');
        if (elegido) {
            const cineId = elegido.value;
            // Guardamos en localStorage para validaciones cliente
            localStorage.setItem('cineSeleccionado', cineId);

            // Actualizar footer inmediatamente
            setFooter(cineId);

            // Hacemos una llamada al servidor para que deje TempData con la selección
            try {
                await fetch(`/Cines/Seleccionar?cineId=${cineId}`);
                // Mostrar alerta con icono info y estilo oscuro + botón rojo
                Swal.fire({
                    icon: 'info',
                    title: 'Cine seleccionado',
                    text: 'Se ha seleccionado tu cine principal.',
                    customClass: {
                        popup: 'swal2-dark-popup',
                        confirmButton: 'swal2-confirm-red'
                    },
                    confirmButtonText: 'Aceptar'
                }).then(() => {
                    location.reload(); // Refresh the page
                });
            } catch {
                Swal.fire({
                    icon: 'warning',
                    title: 'Atención',
                    text: 'No se pudo guardar la selección en el servidor, pero se guardó localmente.'
                });
            }

        } else {
            Swal.fire({
                icon: 'warning',
                title: 'Por favor seleccioná un cine',
                text: ''
            });
        }
    });
</script>

